
#include <dt-bindings/zmk/matrix_transform.h>

#include "zetor_layouts.dtsi"

/ {
    kscan0: kscan_composite {
        compatible = "zmk,kscan-composite";
        columns = <14>;
        rows = <8>;
        matrix {
            kscan = <&kscan1>;
        };
        direct {
            kscan = <&kscan2>;
            row-offset = <7>; // ...and shift it to not overlap
        };
    };
 
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zephyr,display = &oled;
        //zmk,physical-layout = &kata0510_zetor_layout;
    };

    default_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <8>;
        map = <
            RC(0,0)                                                                                         RC(0,1)  RC(0,2)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                 RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)                 RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11) 
            RC(5,0) RC(5,1) RC(5,2) RC(5,3)                                                 RC(5,4) RC(5,5) RC(5,6) RC(5,7)
                                            RC(6,0) RC(6,1)                 RC(6,2) RC(6,3) 
                                            RC(7,0) RC(7,1)                 RC(7,2) RC(7,3)
        >;
    };

    kscan1: kscan_matrix {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
    };
    kscan2: kscan_direct {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
    };

};




&kata0510_zetor_layout {
    transform = <&default_transform>;
};

&pro_micro_i2c {
    status = "okay";
    oled: sh1106@3c {
        compatible = "sinowealth,sh1106";
        reg = <0x3c>;
        width = <128>;
        height = <64>;
        segment-offset = <0>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <63>;
        segment-remap;
        com-invdir;
        com-sequential;
        inversion-on;
        prechargep = <0x22>;
        };
};
